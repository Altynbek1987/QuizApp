<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context=".quiz.QuizActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_height="50dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_weight="4"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_path"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_marginLeft="50dp"
            android:layout_height="wrap_content"
            android:text="Geography"/>
    </LinearLayout>

    <SeekBar
        android:id="@+id/seek_bar_2"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:max="10"
        android:layout_marginTop="80dp"
        android:progressTint="#DBA5F5"
        android:thumbTint="#DBA5F5" />

    <TextView
        android:id="@+id/tv_seek_bar"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="0" />

    <com.example.quizapp.quiz.CustomRecyclerView
        android:id="@+id/horizontal_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="345dp"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/list_quiz_holder"/>

    <Button
        android:id="@+id/btnSkip"
        android:layout_marginTop="124dp"
        android:layout_gravity="center"
        android:layout_width="90dp"
        android:background="@drawable/quiz_btn_skip"
        android:layout_height="40dp"
        android:text="Skip"/>

</LinearLayout>