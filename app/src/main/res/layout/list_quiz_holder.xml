<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_question"
        android:layout_width="231dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="70dp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:text="What is largest city and commercial capital of Sri Lanka?"/>

    <LinearLayout
        android:id="@+id/layout_variant"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

    <Button
        android:id="@+id/btnone"
        android:layout_gravity="center"
        android:layout_width="280dp"
        android:background="@drawable/quiz_btn_one"
        android:layout_height="40dp"
        android:text="One"/>
    <Button
        android:id="@+id/btntwo"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_width="280dp"
        android:background="@drawable/quiz_btn_two"
        android:layout_height="40dp"
        android:text="Two"/>
    <Button
        android:id="@+id/btnthree"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_width="280dp"
        android:background="@drawable/quiz_btn_three"
        android:layout_height="40dp"
        android:text="Three"/>
    <Button
        android:id="@+id/btnfour"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_width="280dp"
        android:background="@drawable/quiz_btn_four"
        android:layout_height="40dp"
        android:text="Four"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/layout_true_false"
        android:layout_marginTop="50dp"
        android:layout_height="wrap_content">

    <Button
        android:id="@+id/btn_true"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_width="280dp"
        android:background="@drawable/quiz_btn_four"
        android:layout_height="40dp"
        android:text="Да"/>
    <Button
        android:id="@+id/btn_false"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_width="280dp"
        android:background="@drawable/quiz_btn_four"
        android:layout_height="40dp"
        android:text="Нет"/>
    </LinearLayout>
</LinearLayout>